    "@angular/platform-server": "^19.2.8",
    "@angular/router": "^19.2.8",
    "@angular/service-worker": "^19.2.8",
    "@angular/ssr": "^19.2.9",
    "express": "^4.21.2",
    "js-base64": "^3.7.7",
    "mermaid": "^11.6.0",
    "monaco-editor": "^0.52.2",
    "pako": "^2.1.0",
    "rxjs": "~7.8.0",
    "svg-pan-zoom": "^3.6.2",
