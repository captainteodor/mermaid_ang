{
  "name": "mermaid-editor",
  "version": "0.0.0",
  "scripts": {
    "ng": "npx ng",
    "start": "npm run prepare-monaco && ng serve",
    "prepare-monaco": "node copy-monaco-assets.js",
    "build": "npm run prepare-monaco && ng build",
    "postbuild": "node copy-monaco-fonts.js && node copy-monaco-css.js",
    "watch": "npx ng build --watch --configuration development",
    "test": "npx ng test",
    "serve:ssr:mermaid-editor": "node dist/mermaid-editor/server/server.mjs",
    "postinstall": "npx patch-package"
  },
  "private": true,
